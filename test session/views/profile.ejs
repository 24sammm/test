<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Profile</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            margin: 0;
            padding: 0;
            background: linear-gradient(270deg, #111317, #3a3e47); 
            background-size: 400% 400%; 
            color: #e0e0e0;
            line-height: 1.6;
            display: flex;
            flex-direction: column;
            justify-content: flex-start;
            align-items: center;
            min-height: 100vh;
            animation: gradientAnimation 5s ease infinite; 
        }

        @keyframes gradientAnimation {
            0% { background-position: 0% 50%; }
            50% { background-position: 100% 50%; }
            100% { background-position: 0% 50%; }
        }

        header {
            background-color: rgba(18, 18, 18, 0.8);
            color: #00ffcc;
            padding: 15px 0;
            text-align: center;
            width: 100%;
            box-shadow: 0 4px 8px rgba(0, 255, 204, 0.2);
            position: fixed;
            top: 0;
            z-index: 10;
        }

        header h1 {
            margin: 0;
            font-size: 28px;
            letter-spacing: 2px;
        }

        header nav a {
            color: #00ffcc;
            margin: 0 20px;
            text-decoration: none;
            font-weight: bold;
        }

        .news-column {
            position: fixed;
            top: 50%; 
            left: 10px; 
            transform: translateY(-50%); 
            width: 250px;
            background-color: rgba(18, 18, 18, 0.9);
            padding: 15px;
            box-shadow: 2px 0 10px rgba(0, 255, 204, 0.3);
            z-index: 10;
            color: #fff;
        }

        .news-column h3 {
            color: #00ffcc;
            font-size: 20px;
            margin-bottom: 10px;
        }

        .news-column ul {
            list-style: none;
            padding: 0;
        }

        .news-column ul li {
            margin-bottom: 10px;
            display: flex;
            align-items: center;
        }

        .news-column ul li a {
            color: #c2c2c2;
            text-decoration: none;
            transition: color 0.3s;
            margin-left: 10px;
        }

        .news-column ul li a:hover {
            color: #00ffcc;
        }

        .news-column ul li i {
            font-size: 1.5em;
            color: #00ffcc;
        }

        .container {
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
            position: relative;
            text-align: center;
            width: 100%;
            max-width: 600px;
            margin-top: 100px;
            padding-bottom: 20px;
            overflow: hidden;
        }

        .profile-card {
            background-color: rgba(26, 26, 26, 0.9);
            padding: 20px;
            box-shadow: 0 10px 20px rgba(0, 255, 204, 0.3);
            border-radius: 10px;
            width: 100%;
            max-width: 600px;
            transition: all 0.5s ease;
            cursor: pointer;
            text-align: center;
            position: relative;
            z-index: 2;
            color: #fff;
            margin-bottom: 20px;
            max-height: 300px;
            overflow-y: auto;
        }

        .profile-image {
            border-radius: 50%;
            width: 100px;
            height: 100px;
            margin-bottom: 15px;
            border: 3px solid #00ffcc;
            box-shadow: 0 4px 10px rgba(0, 255, 204, 0.5);
        }

        .profile-card:hover {
            background: linear-gradient(270deg, #00ffcc, #ff0080, #88c2cf);
            background-size: 400% 400%;
            animation: gradientAnimation 2s ease infinite; 
            transform: scale(1.05);
            box-shadow: 0 15px 25px rgba(0, 255, 204, 0.4);
        }

        .profile-card h2 {
            margin-bottom: 10px;
            font-size: 24px;
            color: #00ffcc;
        }

        .profile-card p {
            margin: 5px 0;
            font-size: 18px;
            color: #c2c2c2;
        }

        .edit-profile-button {
            background-color: #00ffcc;
            color: #fff;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: all 0.5s ease;
        }

        .edit-profile-button:hover {
            background-color: #00aaff;
            transform: scale(1.05);
            position: relative;
            box-shadow: 0 4px 20px rgba(0, 255, 204, 0.5);
        }

        .edit-form {
            display: none;
            background-color: rgba(26, 26, 26, 0.9);
            padding: 20px;
            border-radius: 10px;
            width: 100%;
            max-width: 600px;
            margin-top: 20px;
            box-shadow: 0 5px 15px rgba(0, 255, 204, 0.3);
        }

        .edit-form label {
            display: block;
            margin-bottom: 5px;
        }

        .edit-form input {
            width: calc(100% - 10px);
            padding: 8px;
            margin-bottom: 10px;
            border: none;
            border-radius: 5px;
        }

        .edit-form button {
            background-color: #00ffcc;
            color: #fff;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: all 0.5s ease;
        }

        .edit-form button:hover {
            background-color: #00aaff;
        }

        .user-data-table {
            width: 100%;
            max-width: 600px;
            margin-top: 20px;
            border-collapse: collapse;
        }

        .user-data-table th, .user-data-table td {
            padding: 10px;
            text-align: left;
            border: 1px solid #00ffcc;
        }

        .user-data-table th {
            background-color: rgba(26, 26, 26, 0.9);
            color: #00ffcc;
        }

        .user-data-table tr:nth-child(even) {
            background-color: rgba(26, 26, 26, 0.7);
        }

        .footer {
            background-color: rgba(18, 18, 18, 0.8);
            color: #00ffcc;
            text-align: center;
            padding: 10px 0;
            position: relative;
            width: 100%;
            z-index: 10;
        }
    </style>
</head>
<body>
    <header>
        <h1>User Profile</h1>
        <nav>
            <a href="/">Home</a>
            <a href="/auth/logout">Logout</a>
        </nav>
    </header>

    <div class="news-column">
        <h3>Social Media</h3>
        <ul>
            <li>
                <i class="fab fa-instagram"></i> 
                <a href="https://www.instagram.com/24sammm_/">Instagram</a>
            </li>
            <li>
                <i class="fab fa-facebook"></i>
                <a href="https://www.facebook.com/silaban.samuel.754">Facebook</a>
            </li>
            <li>
                <i class="fab fa-tiktok"></i>
                <a href="https://www.tiktok.com/@24sammmm_?lang=en">TikTok</a>
            </li>
        </ul>
    </div>

    <div class="container">
        <div class="profile-card">
            <img class="profile-image" src="https://example.com/profile.jpg" alt="Profile Image">
            <h2><%= user.name %></h2>
            <p>NIM: <%= user.nim %></p>
            <p>Date of Birth: <%= user.dob %></p>
            <p>Program Study: <%= user.program_study %></p>
            <p>University: <%= user.university %></p>
            <p>Hobbies: <%= user.hobbies %></p>
            <button class="edit-profile-button" onclick="toggleEditForm()">Edit Profile</button>
        </div>

        <div class="edit-form" id="editForm">
            <h3>Edit Profile</h3>
            <form id="editProfileForm">
                <label for="name">Name</label>
                <input type="text" id="name" name="name" value="<%= user.name %>" required>

                <label for="nim">NIM</label>
                <input type="text" id="nim" name="nim" value="<%= user.nim %>" required>

                <label for="dob">Date of Birth</label>
                <input type="date" id="dob" name="dob" value="<%= user.dob %>" required>

                <label for="program_study">Program Study</label>
                <input type="text" id="program_study" name="program_study" value="<%= user.program_study %>" required>

                <label for="university">University</label>
                <input type="text" id="university" name="university" value="<%= user.university %>" required>

                <label for="hobbies">Hobbies</label>
                <input type="text" id="hobbies" name="hobbies" value="<%= user.hobbies %>" required>

                <button type="submit">Save Changes</button>
            </form>
        </div>

        <table class="user-data-table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>NIM</th>
                    <th>Date of Birth</th>
                    <th>Program Study</th>
                    <th>University</th>
                    <th>Hobbies</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% users.forEach(user => { %>
                    <tr>
                        <td><%= user.name %></td>
                        <td><%= user.nim %></td>
                        <td><%= user.dob %></td>
                        <td><%= user.program_study %></td>
                        <td><%= user.university %></td>
                        <td><%= user.hobbies %></td>
                        <td>
                            <button onclick="editUser('<%= user.id %>')">Edit</button>
                            <button onclick="deleteUser('<%= user.id %>')">Delete</button>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>

    <footer class="footer">
        <p>&copy; 2024 Your Name. All Rights Reserved.</p>
    </footer>

    <script>
        function toggleEditForm() {
            const form = document.getElementById('editForm');
            form.style.display = form.style.display === 'block' ? 'none' : 'block';
        }

        document.getElementById('editProfileForm').onsubmit = function(event) {
            event.preventDefault();
            const formData = new FormData(event.target);
            fetch('/updateProfile', {
                method: 'POST',
                body: formData
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    alert('Profile updated successfully!');
                    location.reload();
                } else {
                    alert('Error updating profile. Please try again.');
                }
            });
        };

        function editUser(userId) {
            // Implement edit user functionality
            alert('Edit user with ID: ' + userId);
        }

        function deleteUser(userId) {
            if (confirm('Are you sure you want to delete this user?')) {
                fetch(`/deleteUser/${userId}`, { method: 'DELETE' })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        alert('User deleted successfully!');
                        location.reload();
                    } else {
                        alert('Error deleting user. Please try again.');
                    }
                });
            }
        }
    </script>
</body>
</html>
